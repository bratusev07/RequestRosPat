<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:enabled="false"
        android:fontFamily="@font/montserrat"
        android:text="Ракета"
        android:textColor="#011734"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:fontFamily="@font/montserrat"
        android:text="Авторы:"
        android:textColor="#011734"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_title" />

    <TextView
        android:id="@+id/info_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:fontFamily="@font/montserrat"
        android:text="Еникеев Темирьян Идиятуллович,  Нуриев  Вахид  Ахмадуллович"
        android:textColor="#011734"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/info_title" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_authors">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Номер заявки:"
                android:textColor="#011734"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="2006144883/22"
                android:textColor="#011734"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="22dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Дата подачи заявки:"
                android:textColor="#011734"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_pushDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="2006.12.15"
                android:textColor="#011734"
                android:textSize="12sp" />

            <!--            <ImageView
                            android:id="@+id/bigger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/biger" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Опубликовано:"
                android:textColor="#011734"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="2007.12.10"
                android:textColor="#011734"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="22dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="МПК:"
                android:textColor="#011734"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_mpk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="2006.12.15"
                android:textColor="#011734"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:enabled="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Приоритетные данные:"
                android:textColor="#011734"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="2006144883 2006.12.15 RU
RU20060144883U undefined undefined"
                android:textColor="#011734"
                android:textSize="12sp" />

            <!--            <ImageView
                            android:id="@+id/smaller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/smaller" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dopSec"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Патентообладатели:"
                android:textColor="#011734"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Авторы:  Еникеев Темирьян Идиятуллович,  Нуриев  Вахид  Ахмадуллович"
                android:textColor="#011734"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <!--    <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flipper"
            app:srcCompat="@drawable/ic_launcher_background" />-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:enabled="false"
        android:fontFamily="@font/montserrat"
        android:text="Похожие"
        android:textColor="#011734"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:enabled="false"
        android:fontFamily="@font/montserrat"
        android:text="Описание"
        android:textColor="#011734"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:id="@+id/info_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="#011734"
            android:textSize="14sp" />

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>